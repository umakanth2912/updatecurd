@model DealerVehicle.Models.Dealer

@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>

<button id="bttn1">Create New Dealer</button>
<button id="bttn2">Cancel</button>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    

    <div id="dealer" class="form-horizontal" style="display:none">
        <h4>Dealer</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.DealerName, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.DealerName, new { htmlAttributes = new { @class = "form-control"} })
                <label id="dealername"></label>
                @*Html.ValidationMessageFor(model => model.DealerName, "", new { @class = "text-danger" })*@
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.DealerCity, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.DealerCity, new { htmlAttributes = new { @class = "form-control" } })
                <label id="dealercity"></label>
                @*Html.ValidationMessageFor(model => model.DealerCity, "", new { @class = "text-danger" })*@
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.DealerCountry, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.DealerCountry, new { htmlAttributes = new { @class = "form-control" } })
                <label id="dealercountry"></label>
                @*Html.ValidationMessageFor(model => model.DealerCountry, "", new { @class = "text-danger" })*@
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.DealerPhoneNumber, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.DealerPhoneNumber, new { htmlAttributes = new { @class = "form-control" } })
                <label id="dealerphonenumber"></label>
                @*Html.ValidationMessageFor(model => model.DealerPhoneNumber, "", new { @class = "text-danger" })*@
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

<script src="~/Scripts/jquery-1.10.2.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
<script>
   
    $(document).ready(function () {

        $("#bttn2").click(function () {
            $("#dealer").hide();
        })
        $("#bttn1").click(function () {
            $("#dealer").show();
        })
    });
   var dealernameonfocusout =function() {
        var delrname = $("#DealerName").val();

        if(delrname=="")
        {
            $("#dealername").text("Please enter the Dealer Name").css('color','red');

        }
        else {
            $("#dealername").text("");
        }
   }
   var dealercityonfocusout = function () {
       var delrcity = $("#DealerCity").val();
       if(delrcity=="")
       {
           $("#dealercity").text("Please enter the Dealer City").css('color', 'red');
       }
       else {
           $("#dealercity").text("");
       }
   }
   var dealercountryonfocusout = function () {
       var delrcountry = $("#DealerCountry").val();
       if(delrcountry=="")
       {
           $("#dealercountry").text("Please enter Dealer Country").css("color", "red");
       }
       else {
           $("#dealercountry").text("");
       }
   }
   var dealerphonenumfocusout = function () {
       var delrphn = $("#DealerPhoneNumber").val();
       if(delrphn=="")
       {
           $("#dealerphonenumber").text("Please enter Dealer Phone Number").css("color", "red");
       }
       else {
           $("#dealerphonenumber").text("");
       }
   }
   $("#DealerName").focusout(dealernameonfocusout);
   $("#DealerCity").focusout(dealercityonfocusout);
   $("#DealerCountry").focusout(dealercountryonfocusout);
   $("#DealerPhoneNumber").focusout(dealerphonenumfocusout);
   
    
    
</script>